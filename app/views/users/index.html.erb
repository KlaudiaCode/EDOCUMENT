<div class="middle">
Lista użytkowników:

<%= form_with url: active_path do |f| %>
    <% @users.each do |u| %>
        <br>
        <%= f.fields_for :users, index: u.id do |fu| %>
            <%= u.usernum %>
            <% if u.active %>
                <%= fu.check_box :active, checked: 'checked' %>
            <% else %>
                <%= fu.check_box :active %>
            <% end %>
        <% end %>
    <% end %>
    <br>
    <br>
    <%= f.submit %>
<% end %>
</div>