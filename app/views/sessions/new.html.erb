<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <h1 class="display-4 middle text-light">Logowanie</h1><br>
        <div class="form-group row">
          <%= f.label "Identyfikator", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :usernum, class:"form-control shadow rounded", placeholder:"Wpisz numer indeksu" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label "Hasło", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control", placeholder:"Wpisz hasło" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Zaloguj się", class:"btn btn-outline-light btn-lg" %>
        </div> 
      <%end%>
      <div class="middle">
      <%= link_to "Nie masz konta? Zarejestruj się!", new_user_path, class: "text-dark"%> 
      </div>
    </div>
  </div>
</div>