<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%# render 'shared/errors', obj: @user %>
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :usernum, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :usernum, class:"form-control shadow rounded", placeholder:"User number" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control", placeholder:"Enter your password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Zaloguj się", class:"btn btn-outline-light btn-lg" %>
        </div> 
      <%end%>
      <%= link_to "Nie masz konta? Zarejestruj się!", new_user_path, class:"middle"%> 
    </div>
  </div>
</div>